<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">New Reply</h1>
  </div>
<div class="panel-body">
  <form action="<%= post_thread_posts_url(@thread) %>" method="post" role="form">
    <input   type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">

    <div class="form-group">
     <label for="post_body" class="control-label"></label>
       <textarea 
              class="form-control"
              id="post_body" 
              name="post[body]" 
              value=""
              style="height:300px;"
              placeholder="A Super Awesome Post"><%= @post.body if @post.body %></textarea>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary pull-right" value="Post Reply!">
    </div>
  </form>
</div>
</div>
