<div class="panel panel-default">
  <div class="panel-heading">
    <h1 class="panel-title">Edit Post</h1>
  </div>
<div class="panel-body">
  <form action="<%= post_url(@post) %>" method="post" role="form">
    <input   type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="PATCH">


    <div class="form-group">
     <label for="post_body" class="control-label"></label>
     <textarea 
            class="form-control"
            id="post_body" 
            name="post[body]" 
            value="" 
            style="height:300px;" 
            placeholder="Your super awesome post goes here!"><%= @post.body if @post.body %></textarea>
        <p class="help-block">Text can be styled with BBCode tags [i], [b], [s], etc..</p>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary pull-right" value="Update Post">
    </div>
  </form>
</div>
</div>
