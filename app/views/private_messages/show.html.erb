<% content_for(:title, @message.title)%>

<div class="row">
  <div class="col-xs-10 col-xs-offset-1">

  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/private_messages">Private Messages</a></li>
    <li class="active"><%= @message.title %></li>
  </ol>

    <table  class="table table-striped" 
        style="margin:0; border-bottom:rgb(250,250,250) 1px solid;">

      <tbody>
      <tr>
        <!-- post author div -->
        <td style="border-right:grey 1px solid; width:200px; min-width:200px;">
          <strong>
            <p style="margin-top:5px; color:black; font-size:115%;">
              <%= @message.author.username %>
              <% if @message.author.role == "ADMINISTRATOR" %>
                <span class="glyphicon glyphicon-star" style="color:red;"></span>
              <% end -%>
            </p>
          </strong>
          <p><%= @message.author.reg_date %></p>
          <%= image_tag @message.author.avatar.url, style: "display: block; margin: auto;", class: "avatar_image" %>
          <div style="min-height:20px;"></div>
          <div style="text-align:center;">
          <a href="<%= user_url(@message.author) %>" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-user"></span>
          </a>

          <a  href="<%= new_user_private_message_url(@message.author) %>"
              class="btn btn-default btn-sm"
              data-toggle="modal"
              data-target="#pmModal">
            <span class="glyphicon glyphicon-envelope"></span>
          </a>

          <a href="<%= user_posts_url(@message.author) %>" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-list"></span>
          </a>

          <a href="<%= private_message_url(@message) %>" class="btn btn-default btn-sm">
            <span class="glyphicon glyphicon-link"></span>
          </a>
        </div>
        </td>

        <!-- post body div -->
        <td>
          <div style="position:relative; height:100%; width:100%; display:inline-block">
            <!-- content div -->
            <div class="post-body" style="padding-bottom:20px;">
              <%= simple_format @message.body %>
            </div>

            <!-- created div -->
            <div style="position:absolute; bottom:0; left:0;">
              <%= @message.created_at %>
            </div>

            <!-- controls div -->
            <div style="position:absolute; bottom:0; right:0;">
                <a  href="<%= new_user_private_message_url(@message.author) + "?quote=#{@message.id}"%>"
                    class="btn btn-default btn-sm"
                    data-toggle="modal"
                    data-target="#pmModal">
                  <span class="glyphicon glyphicon-new-window"></span> Reply
                </a>
            </div>
         </div>
        </td>
      </tr>
    </tbody>
  </table>

  <ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li><a href="/private_messages">Private Messages</a></li>
    <li class="active"><%= @message.title %></li>
  </ol>


  </div>
</div>
