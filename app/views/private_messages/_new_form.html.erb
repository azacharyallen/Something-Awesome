  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">New Private Message to: <%= @user.username %></h1>
    </div>
  <div class="panel-body">
    <form action="<%= user_private_messages_url(@user) %>" method="post" role="form">
      <input  type="hidden"
              name="authenticity_token"
              value="<%= form_authenticity_token %>">

      <div class="form-group">
       <label for="private_message_title" class="control-label col-xs-2">Title</label>
         <input type="text" 
                class="form-control"
                id="private_message_title" 
                name="private_message[title]" 
                value="<%= @message.title if @message.title %>"
                placeholder="A Super Awesome Title!">
      </div>

      <div class="form-group">
        <label for="private_message_body" class="control-label col-xs-2">Message</label>
        <textarea 
              class="form-control"
              id="private_message_body" 
              name="private_message[body]" 
              value=""
              style="height:300px;"
              placeholder="Your super awesome message goes here!"><%= @message.body if @message.body %></textarea>
        <p class="help-block">Text can be styled with BBCode tags [i], [b], [s], etc..</p>
      </div>

      <div class="form-group">
          <input type="submit" class="btn btn-primary pull-right" value="Send PM">
      </div>
    </form>
  </div>
</div>