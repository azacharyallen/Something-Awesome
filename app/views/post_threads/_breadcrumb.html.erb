<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
    <table class="table breadcrumb-table" style="margin:0; padding:0;">
      <tr>
        <td>
          <ol class="breadcrumb" style="margin:0;">
            <li><a href="/">Home</a></li>
            <li><a href="<%= section_url(@thread.forum.section) %>"><%= @thread.forum.section.name %></a></li>
            <li><a href="<%= forum_url(@thread.forum) %>"><%= @thread.forum.name %></a></li>
            <li class="active"><%= @thread.title %></li>
          </ol>
        </td>
        <td style="text-align:right; vertical-align:middle; width:200px;">
            <%= paginate @posts  %>
        </td>
      </tr>
    </table>
  </div>
</div>