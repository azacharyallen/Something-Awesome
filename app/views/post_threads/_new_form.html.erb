  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">New Thread</h1>
    </div>
  <div class="panel-body">
    <form action="<%= forum_post_threads_url(@post_thread.forum_id) %>" method="post" role="form">
      <input  type="hidden"
              name="authenticity_token"
              value="<%= form_authenticity_token %>">

      <div class="form-group">
       <label for="post_thread_title" class="control-label">Title</label>
         <input type="text" 
                class="form-control"
                id="post_thread_title" 
                name="post_thread[title]" 
                value=""
                placeholder="A Super Awesome Thread!">
      </div>

      <div class="form-group">
       <label for="post_body" class="control-label">First Post</label>
          <textarea 
                class="form-control"
                id="post_body" 
                name="post[body]" 
                value=""
                style="height:300px;"
                placeholder="Your super awesome first post goes here!"></textarea>
          <p class="help-block">Text can be styled with BBCode tags [i], [b], [s], etc..</p>
      </div>

      <div class="form-group">
          <input type="submit" class="btn btn-primary pull-right" value="Post Thread">
      </div>
    </form>
  </div>
</div>